/* index/index.wxss */

/* 轮播图 */
.banner{
  width: 100%;
  height: 300rpx;
}
.banner .bannerItem image{
  width: 100%;
  height: 100%;
}

/* nav导航 */
.nav{
  background-color: #fff;
  display: flex;
  padding: 30rpx 0;
}
.nav .navItem{
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.nav .navItem .iconfont{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  background-color: red;
  color: #fff;
  text-align: center;
  line-height: 100rpx;
  font-size: 50rpx;
  margin-bottom: 10rpx;
}
.nav .navItem text{
  font-size: 26rpx;
}

/* 为你推荐*/
.every-day-push{
  padding: 0 20rpx;
  background: white;
}
.content{
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  align-items: center;
}
.content .push-for-you{
  font-size: 30rpx;
}
.push-better .title{
  color: gray;
}
.look-more{
  display: block;
  height: 30rpx;
  width: 130rpx;
  border: 1rpx solid gray;
  border-radius:30rpx ;
  font-size: 18rpx;
  text-align: center;
  line-height: 30rpx;
}
.imgs{
  width: 200rpx;
  height: 200rpx;
  border-radius: 10rpx;
}
.push-title{
  display: flex;
  overflow: auto;
}
.push-item{
  width: 200rpx;
  margin: 20rpx 20rpx 20rpx 0;
}
.desc{
  font-size: 26rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}

/*排行榜*/
.top{
  background: #fff;
  padding: 20rpx;
}
.musicList{
  width: 95%;
  height: 100rpx;
  display: flex;
  margin-bottom: 10rpx;
  background: #eeeeee;
}
.musicList image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 5rpx;
}
.musicList text{
  width: 400rpx;
  line-height: 100rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.musicList .num{
  width: 100rpx;
  text-align: center;
}
.topList{
  height: 400rpx;
}
.bannerItem1{
  padding-top:10rpx;
}
.musicKids{
  margin-bottom: 10rpx;
}